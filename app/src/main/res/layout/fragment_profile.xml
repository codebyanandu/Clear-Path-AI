<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".ui.ProfileFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Profile"
        android:textSize="22dp"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:gravity="center" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileIconImageView"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/usericon" />

    <TextView
        android:id="@+id/pNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dev_name"
        android:textSize="22dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:id="@+id/editProfileLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/rect_bg"
        android:layout_gravity="center"
        android:paddingTop="8dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingBottom="8dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textColor="#acacac"
            android:textSize="16dp"
            android:gravity="center"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_edit"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="18dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/pEmailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="techwithanandu@gmail.com"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mobile Number"
        android:textSize="18dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/pNumberTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reference Number"
        android:textSize="18dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/pRefNumberTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:textSize="20dp"/>



</LinearLayout>