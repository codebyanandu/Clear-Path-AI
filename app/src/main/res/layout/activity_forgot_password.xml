<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".ForgotPasswordActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:gravity="center"
       android:layout_weight="1"
       android:padding="20dp">
       <ImageView
           android:layout_width="100dp"
           android:layout_height="100dp"
           android:src="@drawable/lock"
           android:layout_gravity="center" />

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Forgot"
           android:textStyle="bold"
           android:textSize="32dp"
           android:gravity="center"
           android:layout_marginTop="20dp"
           android:textColor="@color/green" />

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Password ?"
           android:textSize="40dp"
           android:fontFamily="@font/sf_pro_text_light"
           android:gravity="center"
           android:textColor="@color/green" />

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="No worries, weâ€™ll send you\n reset instructions"
           android:textSize="16dp"
           android:gravity="center"
           android:layout_marginTop="20dp"
           android:textColor="@color/green" />
   </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/top_card_green" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rect_box"
            android:orientation="horizontal"
            android:padding="6dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_email"/>

            <EditText
                android:id="@+id/forgotEmailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#00000000"
                android:hint="Email"
                android:textColor="@color/lightBg"
                android:textColorHint="@color/lightBg"
                android:padding="8dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/resetPasswordTextView"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_bacg"
            android:clickable="true"
            android:gravity="center"
            android:text="Reset Password"
            android:textColor="@color/green"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/backLoginTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:clickable="true"
            android:gravity="center"
            android:text="Back to Login"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:background="@color/white" />


    </LinearLayout>

</LinearLayout>